<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Select2 -->
    <link href="~/Common/select2/dist/css/select2.min.css" rel="stylesheet" />

    <!-- sweet alert -->
    <link href="~/Common/SweetAlert/sweetalert2.css" rel="stylesheet" />
    <link href="~/Common/SweetAlert/sweetalert2.min.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("EmpIndex", "Attendance")">Employee</a></li>
                    <li><a href="@Url.Action("RelIndex", "Attendance")">Relation Type</a></li>
                    <li><a href="@Url.Action("RelDetailsIndex", "Attendance")">Relation Details</a></li>
                    <li><a href="@Url.Action("RelTypeCountIndex", "Attendance")">Relation Type Count</a></li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Select2 -->
    <script src="~/Common/select2/dist/js/select2.full.min.js"></script>

    <!-- Sweet Alert -->
    <script src="~/Common/SweetAlert/sweetalert2.all.js"></script>
    <script src="~/Common/SweetAlert/sweetalert2.all.min.js"></script>
    <script src="~/Common/SweetAlert/sweetalert2.common.js"></script>
    <script src="~/Common/SweetAlert/sweetalert2.js"></script>
    <script src="~/Common/SweetAlert/sweetalert2.min.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
